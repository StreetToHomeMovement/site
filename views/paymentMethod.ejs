<html>

  <head>
    <title>Street to Home Movement - Payment Info</title>
    <script src="/public/js/braintree_setup.js"></script>
    <script src="/public/js/braintree.js"></script>
    <% include ./partials/head %>
  </head>

  <body>

    <header id="header">
      <% include ./partials/header %>
    </header>

    <div class="form-container">
      <h3 class="user-form-header">Payment Information</h3><br>
      <form id="donation-form" action="/setaccount" method="post">
        <div id="checkout"></div>
        <input class="btn btn-primary form-submit hug-right" type="submit" label="Submit">
      </form>
    </div>
    <script>
      document.getElementById("donation-form").addEventListener("submit", function(event){
          document.getElementById("spinner").style.visibility = "visible"
      })
    </script>

    <div class="after-form-container">
      <p class="after-form">
        Know your email but not your password?
        <a id="forgotpwd" href="#" onclick="resetpwd()">Reset password</a>
      </p>
      <br>
      <p class="after-form">
        Can't remember which email account you used?
        <a href="#">Email support</a>
      </p>
    </div>

    <script>
      braintreeSetup(<%= amount %>, <%= subscription %>)
    </script>

    <div id="spinner" class="loading">Loading&#8230;</div>

  </body>

</html>
